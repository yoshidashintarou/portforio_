    <thead>
      <tr class="info">
        <th>タイトル</th>
        <th>日記</th>
      </tr>
    </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td class="text-left">
          <%= post.title %>
        </td>
        <td class="text-left">
          <%= post.body %>
        </td>
    <% end %>
     </td>
      </tr>
  </tbody>
</table>